@model List<BookListViewModel>

<div>

	@foreach (var item in Model)
	{
		<!-- Kitap Başlığını Göster -->
		@item.Title

		<!-- Kitap Düzenle Linki -->
		<a asp-controller="Book" asp-action="Edit" asp-route-id="@item.Id" class="float-end me-2"><i class="bi bi-pencil-square"></i></a>

		<!-- Kitap Detayları Linki -->
		<a asp-controller="Book" asp-action="Details" asp-route-id="@item.Id" class="float-end me-2"><i class="bi bi-chat-square-dots"></i></a>

		<!-- Kitap Sil Linki -->
		<a asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id" class="float-end me-2"><i class="bi bi-trash3-fill"></i></a>
		<hr />
	}

</div>

<!-- Geri Dön Butonu -->
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-4 fw-bold float-end">Geri Dön</a>