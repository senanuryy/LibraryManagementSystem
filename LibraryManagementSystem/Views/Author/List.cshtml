@model List<AuthorListViewModel>

<div>

	<!-- Model içinde yer alan her bir yazar için döngü başlatılıyor -->
	@foreach (var item in Model)
	{
		<!-- Yazarın tam adı gösteriliyor -->
		@item.FullName

		<!-- Yazarı düzenlemek için tıklanabilir buton -->
		<a asp-controller="Author" asp-action="Details" asp-route-id="@item.Id" class="float-end me-2"><i class="bi bi-chat-square-dots"></i></a>
		<a asp-controller="Author" asp-action="Edit" asp-route-id="@item.Id" class="float-end me-2"><i class="bi bi-pencil-square"></i></a>
		
		<hr/>
	}

	<!-- 'Geri Dön' butonu, kullanıcıyı ana sayfaya yönlendiriyor -->
	<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-4 fw-bold float-end">Geri Dön</a>

</div>